<h3><%= @cat.name %> Info!</h3>
<table>
  <tr>
    <th>Name</th>
    <td> <%= @cat.name %> </td>
  </tr>
  <tr>
    <th>Color</th>
    <td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <th>Birthday</th>
    <td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <th>Sex</th>
    <td> <%= @cat.sex %> </td>
  </tr>
  <% unless @cat.description.nil? %>
  <tr>
    <th>Description</th>
    <td> <%= @cat.description %> </td>
  </tr>
  <% end %>
</table>
