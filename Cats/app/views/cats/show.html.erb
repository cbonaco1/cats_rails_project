<h3><%= @cat.name %> Info!</h3>
<table>
  <tr>
    <th>Name</th>
    <td> <%= @cat.name %> </td>
  </tr>
  <tr>
    <th>Color</th>
    <td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <th>Birthday</th>
    <td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <th>Sex</th>
    <td> <%= @cat.sex %> </td>
  </tr>
  <% unless @cat.description.nil? %>
  <tr>
    <th>Description</th>
    <td> <%= @cat.description %> </td>
  </tr>
  <% end %>
</table>

<h3>Rental Requests</h3>
<table>
  <% @requests.each do |request| %>
    <tr>
      <th>Start Date:</th>
      <td> <%= request.start_date %></td>

    </tr>

    <tr>
      <th>End Date:</th>
      <td> <%= request.end_date %></td>
    </tr>

    <% if request.pending? %>
    <tr>
      <td>
        <%= button_to "Approve", approve_cat_rental_request_url(request) %>
      </td>
      <td>
        <%= button_to "Deny", deny_cat_rental_request_url(request) %>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>
